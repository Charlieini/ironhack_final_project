
<div class="modal fade" id="sign_up" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    	  <div class="modal-dialog">
				<div class="loginmodal-container">
					<h1>Create account</h1><br>
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

          <%= devise_error_messages! %>

          <div><%= f.label :name %><br />

          <%= f.email_field :name %></div>

          <div><%= f.label :email %><br />

          <%= f.email_field :email, :autofocus => true %></div>

          <div><%= f.label :password %><br />

          <%= f.password_field :password %></div>

          <div><%= f.label :password_confirmation %><br />

          <%= f.password_field :password_confirmation %></div>


          <p><div><%= f.submit "Sign up", :class => 'btn btn-small btn-success' %></div></p>

          <% end %>
				</div>
			</div>
</div>
