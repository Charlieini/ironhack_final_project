<%= form_for @exercise do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :kind %>
  <%= f.text_field :kind %>
  <br>
  <%= f.label :duration %>
  <%= f.time_field :duration %>
  <br>
  <%= f.label :pace %>
  <%= f.text_field :pace %>
  <br>
  <%= f.label :distance  %>
  <%= f.number_field :distance %>
  <br>

  <%= f.submit 'Edit'%>

<%end%>
