<%= form_for @workout do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <br>
  <%= f.submit 'Edit Workout'%>

<%end%>

<ul>
<% @workout.exercises.each do |exercise| %>
<li><%= exercise.name %>
  <%= link_to("Edit", edit_exercise_path(exercise)) %>
  |
  <%= link_to("Delete", exercise_path(exercise), method: :delete, data: {confirm: "Are you sure?"}) %>
</li>
<%end%>
</ul>

<%= form_for @exercise do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :kind %>
  <%= f.text_field :kind %>
  <br>
  <%= f.label :duration %>
  <%= f.time_field :duration %>
  <br>
  <%= f.label :pace %>
  <%= f.text_field :pace %>
  <br>
  <%= f.label :distance  %>
  <%= f.number_field :distance %>
  <br>
  <%= f.hidden_field :trainer_id, :value => current_user.id %>
  <%= f.hidden_field :workout_id, :value => params[:id] %>

  <%= f.submit 'Add exercise'%>

<%end%>
